<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AdminLogFilter</filter-name>
        <filter-class>com.ejbbet.authorization.LoginHttpFilter</filter-class>
        <init-param>
            <param-name>loginBeanName</param-name>
            <param-value>adminAuthorizatonBean</param-value>
        </init-param>
        <init-param>
            <param-name>redirectAdress</param-name>
            <param-value>/EjbBet/admin/login.xhtml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AdminLogFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserLogFilter</filter-name>
        <filter-class>com.ejbbet.authorization.LoginHttpFilter</filter-class>
        <init-param>
            <param-name>loginBeanName</param-name>
            <param-value>userAuthorizationBean</param-value>
        </init-param>
        <init-param>
            <param-name>redirectAdress</param-name>
            <param-value>/EjbBet/user/login.xhtml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserLogFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CompanyLogFilter</filter-name>
        <filter-class>com.ejbbet.authorization.LoginHttpFilter</filter-class>
        <init-param>
            <param-name>loginBeanName</param-name>
            <param-value>companyAuthorizationBean</param-value>
        </init-param>
        <init-param>
            <param-name>redirectAdress</param-name>
            <param-value>/EjbBet/company/login.xhtml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CompanyLogFilter</filter-name>
        <url-pattern>/company/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>main.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
